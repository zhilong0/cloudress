<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="mongoCredentials" class="com.df.common.morphia.MongoCredentialsFactoryBean">
	</bean>
	<bean id="mongoClientOptions" class="com.df.common.morphia.MongoClientOptionsFactoryBean">
		<property name="socketTimeout" value="10000" />
		<property name="readSecondary" value="true" />
	</bean>
	<bean id="mongoClient" class="com.df.common.morphia.MongoClientFactoryBean">
		<property name="addresses">
			<list>
				<value>127.0.0.1:27017</value>
			</list>
		</property>
		<property name="credentials" ref="mongoCredentials" />
		<property name="mongoClientOptions" ref="mongoClientOptions" />
	</bean>
	<bean id="morphia" class="com.df.common.morphia.MorphiaFactoryBean" />
	<bean id="specialityDataStore" class="com.df.common.morphia.DataStoreFactoryBean">
		<property name="mongoClient" ref="mongoClient" />
		<property name="morphia" ref="morphia" />
		<property name="dbName" value="speciality" />
	</bean>
</beans>
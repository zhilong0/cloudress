<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd ">
	<import resource="classpath:META-INF/idm-beans.xml" />
	<import resource="classpath:META-INF/blob-store-beans.xml" />
	<import resource="classpath:META-INF/speciality-beans.xml" />
	<import resource="security.xml" />

	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />
	<bean id="registrationMessageNotifier" class="com.df.idm.registration.message.DefaultRegistrationMessageNotifier">
		<property name="emailContextProvider" ref="emailContextProvider" />
		<property name="richMailSender" ref="richMailSender" />
		<property name="taskExecutor" ref="asyncTaskExecutor" />
		<property name="verifyUrlPrefix" value="/rs/users/email/verify" />
	</bean>
	<bean id="emailVerificationResultHandler" class="com.df.idm.registration.ForwardVerificationResultHandler">
		<property name="succeedUrl" value="/verify/success" />
		<property name="failedUrl" value="/verify/failure" />
	</bean>
	<bean id="objectMapper" class="com.df.common.json.ObjectMapperFactoryBean" />
	<bean id="jacksonContextResolver" class="com.df.http.rs.provider.JacksonContextResolver">
		<property name="objectMapper" ref="objectMapper" />
	</bean>
	<bean id="idmExceptionMapper" class="com.df.http.rs.provider.idm.IdmExceptionMapper" />
	<bean id="idmValidationExceptionMapper" class="com.df.http.rs.provider.idm.ValidationExceptionMapper">
		<constructor-arg index="0" ref="objectMapper" />
	</bean>
	<bean id="specialityExceptionMapper" class="com.df.http.rs.provider.speciality.SpecialityExceptionMapper" />
	<bean id="specialityvalidationExceptionMapper" class="com.df.http.rs.provider.speciality.ValidationExceptionMapper">
		<constructor-arg index="0" ref="objectMapper" />
	</bean>
	<bean id="imageServiceExceptionMapper" class="com.df.http.rs.provider.image.ImageServiceExceptionMapper" />
	<bean id="authenticationManager" class="org.springframework.security.authentication.ProviderManager">
		<property name="providers">
			<list>
				<ref bean="basicAuthenticationProvider" />
			</list>
		</property>
	</bean>
	<context:component-scan base-package="com.df.idm.rs.resources" />
	<bean id="imageResource" class="com.df.blobstore.image.http.resources.ImageResources">
		<constructor-arg index="0" ref="imageService" />
	</bean>
	<bean id="regionResource" class="com.df.spec.locality.http.resources.RegionResources">
		<property name="regionService" ref="regionService" />
	</bean>
	<bean id="specialityResource" class="com.df.spec.locality.http.resources.SpecialityResources">
		<property name="specialityService" ref="specialityService" />
		<property name="imageLinkCreator" ref="imageLinkCreator" />
	</bean>
	<bean id="geoResource" class="com.df.spec.locality.http.resources.GeoResources">
		<property name="regionService" ref="regionService" />
		<property name="geoService" ref="geoService" />
	</bean>
	<bean id="shopResource" class="com.df.spec.locality.http.resources.ShopResources">
		<property name="shopService" ref="shopService" />
		<property name="commentService" ref="commentService" />
		<property name="imageLinkCreator" ref="imageLinkCreator" />
	</bean>
	<bean id="commentResource" class="com.df.spec.locality.http.resources.CommentResources">
		<property name="commentService" ref="commentService" />
	</bean>
	<bean id="supplierResource" class="com.df.spec.locality.http.resources.SupplierResources">
		<constructor-arg index="0" ref="geoService" />
		<constructor-arg index="1" ref="supplierService" />
	</bean>
	<bean id="campaignResource" class="com.df.spec.locality.http.resources.CampaignResources">
		<constructor-arg index="0" ref="campaignService" />
	</bean>
	<bean id="provisionService" class="com.df.common.provision.ProvisionService" />
	<bean id="regionImporter" class="com.df.spec.locality.provision.RegionImporter">
		<constructor-arg index="0" value="1" />
		<constructor-arg index="1" value="speciality" />
		<constructor-arg index="2" ref="regionService" />
	</bean>
	<bean id="specialityImporter" class="com.df.spec.locality.provision.SpecialityImporter">
		<constructor-arg index="0" value="2" />
		<constructor-arg index="1" value="speciality" />
		<property name="objectMapper" ref="objectMapper" />
		<property name="resourceNames">
			<list value-type="java.lang.String">
				<value>classpath:speciality_sh.json</value>
			</list>
		</property>
	</bean>
	<bean id="shopImporter" class="com.df.spec.locality.provision.ShopImporter">
		<constructor-arg index="0" value="3" />
		<constructor-arg index="1" value="speciality" />
		<property name="objectMapper" ref="objectMapper" />
		<property name="resourceNames">
			<list value-type="java.lang.String">
				<value>classpath:shop_sh.json</value>
			</list>
		</property>
	</bean>
</beans>